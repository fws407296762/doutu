<view class="body">
    <swiper class="main-swiper" indicator-dots="true" autoplay="true" duration="500">
        <block wx:for="{{imageUrls}}">
            <swiper-item>
                <image src="{{item}}" class="silde-image" />
            </swiper-item>
        </block>
    </swiper>

    <view class="news-list">
        <block wx:for="{{newsList}}" wx:for-item="n">
            <view class="news-list-item">
                <image wx:if="{{n.havePic}}" class="news-thumb" src="{{n.imageurls[0].url}}" />
                <view wx:else class="news-no-thumb">
                    <text>暂无图片</text>
                </view>
                <view class="news-content">
                    <navigator url="newscontent/newscontent?content={{n.html}}&title={{n.title}}" hover-class="navigator-hover"><text class="news-title">{{n.title}}</text></navigator>
                </view>
            </view>
        </block>
    </view>

</view>
